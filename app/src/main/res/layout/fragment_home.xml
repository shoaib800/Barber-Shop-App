<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:xlmns="http://schemas.android.com/apk/res-auto"
    android:background="@color/ColorBackground"
    android:orientation="vertical"
    tools:context="com.shoaib.barbershopapp.Fragments.HomeFragment">

    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/layout_user_information"
        android:visibility="gone"
        android:weightSum="4"
        android:padding="15dp"
        android:background="@color/colorHomeHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profile_image"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/ic_baseline_account_circle_white_24" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/txt_user_name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text=""
                android:fontFamily="@font/bellerose"
                android:textColor="@color/ColorBackground"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/txt_phone"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text=""
                android:fontFamily="@font/bellerose"
                android:textColor="@color/ColorBackground"
                android:textSize="20sp" />

        </LinearLayout>

    </LinearLayout>

   <LinearLayout
       android:orientation="vertical"
       android:layout_width="match_parent"
       android:layout_height="wrap_content">

       <LinearLayout
           android:orientation="horizontal"
           android:weightSum="3"
           android:padding="8dp"
           android:layout_width="match_parent"
           android:layout_height="wrap_content" >

           <androidx.cardview.widget.CardView
               android:id="@+id/card_view_booking"
               android:layout_marginRight="8dp"
               xmlns:app="http://schemas.android.com/apk/res-auto"
               app:cardCornerRadius="8dp"
               android:layout_width="0dp"
               android:layout_weight="1"
               android:layout_height="wrap_content" >

               <LinearLayout
                   android:orientation="vertical"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content">

                   <ImageView
                       android:layout_width="50dp"
                       android:src="@drawable/ic_baseline_event_note_24"
                       android:layout_gravity="center_horizontal"
                       android:layout_height="50dp"/>

                   <TextView
                       android:text="Booking"
                       android:fontFamily="@font/bellerose"
                       android:textSize="@dimen/textCardSize"
                       android:layout_gravity="center_horizontal"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"/>
               </LinearLayout>

           </androidx.cardview.widget.CardView>

           <androidx.cardview.widget.CardView
               android:id="@+id/card_view_cart"
               android:layout_marginRight="8dp"
               xmlns:app="http://schemas.android.com/apk/res-auto"
               app:cardCornerRadius="8dp"
               android:layout_width="0dp"
               android:layout_weight="1"
               android:layout_height="wrap_content" >

               <RelativeLayout
                   android:orientation="vertical"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content">

                   <com.nex3z.notificationbadge.NotificationBadge
                       android:id="@+id/notification_badge"
                       android:layout_toRightOf="@+id/txt_cart_title"
                       android:layout_width="30dp"
                       android:layout_height="30dp"
                       tools:nbMaxTextLength="2"/>

                   <ImageView
                       android:id="@+id/cart_icon"
                       android:layout_width="50dp"
                       android:src="@drawable/ic_baseline_shopping_cart_24"
                       android:layout_centerHorizontal="true"
                       android:layout_height="50dp"/>

                   <TextView
                       android:id="@+id/txt_cart_title"
                       android:layout_below="@+id/cart_icon"
                       android:text="Cart"
                       android:fontFamily="@font/bellerose"
                       android:textSize="@dimen/textCardSize"
                       android:layout_centerHorizontal="true"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"/>

               </RelativeLayout>

           </androidx.cardview.widget.CardView>

           <androidx.cardview.widget.CardView
               android:id="@+id/card_view_history"
               android:layout_marginRight="8dp"
               xmlns:app="http://schemas.android.com/apk/res-auto"
               app:cardCornerRadius="8dp"
               android:layout_width="0dp"
               android:layout_weight="1"
               android:layout_height="wrap_content" >

               <LinearLayout
                   android:orientation="vertical"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content">

                   <ImageView
                       android:layout_width="50dp"
                       android:src="@drawable/ic_baseline_history_24"
                       android:layout_gravity="center_horizontal"
                       android:layout_height="50dp"/>

                   <TextView
                       android:text="History"
                       android:fontFamily="@font/bellerose"
                       android:textSize="@dimen/textCardSize"
                       android:layout_gravity="center_horizontal"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"/>
               </LinearLayout>

           </androidx.cardview.widget.CardView>



       </LinearLayout>

       <androidx.cardview.widget.CardView
           android:id="@+id/card_booking_info"
           app:cardCornerRadius="8dp"
           android:visibility="gone"
           android:layout_marginLeft="8dp"
           android:layout_marginRight="8dp"
           android:layout_width="match_parent"
           android:layout_height="wrap_content">

           <LinearLayout
               android:orientation="vertical"
               android:padding="8dp"
               android:layout_width="match_parent"
               android:layout_height="wrap_content">

                   <LinearLayout
                       android:orientation="horizontal"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content">

                       <ImageView
                           android:layout_gravity="center_vertical"
                           android:src="@drawable/ic_event_note_black_24dp"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content" />

                       <TextView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:layout_marginLeft="8dp"
                           android:fontFamily="@font/bellerose"
                           android:text="Your Bookin Information"
                           android:textSize="18sp"
                           android:textStyle="bold" />

                   </LinearLayout>

                   <LinearLayout
                       android:orientation="horizontal"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content">

                       <TextView
                           android:text="@string/address_bullet"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content" />

                       <TextView
                           android:id="@+id/txt_salon_address"
                           android:textStyle="bold"
                           android:text=" Address Salon"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content" />

                   </LinearLayout>

                   <LinearLayout
                       android:orientation="horizontal"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content">

                       <TextView
                           android:text="@string/time_bullet"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content" />

                       <TextView
                           android:id="@+id/txt_time"
                           android:text=" Time"
                           android:textStyle="bold"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content" />

                   </LinearLayout>

                   <LinearLayout
                       android:orientation="horizontal"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content">

                       <TextView
                           android:text="@string/stylelist_bullet"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content" />

                       <TextView
                           android:id="@+id/txt_salon_barber"
                           android:text=" David"
                           android:textStyle="bold"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content" />

                   </LinearLayout>


                   <LinearLayout
                       android:orientation="horizontal"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content">

                       <TextView
                           android:text="@string/bullet"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content" />

                       <TextView
                           android:id="@+id/txt_time_remain"
                           android:text=" Time"
                           android:textStyle="bold"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content" />

                   </LinearLayout>

               <LinearLayout
                   android:orientation="horizontal"
                   android:weightSum="2"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content">

                   <Button
                       android:layout_marginTop="4dp"
                       android:id="@+id/btn_change_booking"
                       android:layout_marginRight="4dp"
                       android:text="CHANGE"
                       android:layout_weight="1"
                       android:background="@drawable/button_border_bg"
                       android:layout_width="0dp"
                       android:layout_height="wrap_content" />

                   <Button
                       android:layout_marginTop="4dp"
                       android:id="@+id/btn_delete_booking"
                       android:layout_marginRight="4dp"
                       android:text="DELETE"
                       android:layout_weight="1"
                       android:background="@drawable/button_border_bg"
                       android:layout_width="0dp"
                       android:layout_height="wrap_content" />

               </LinearLayout>

           </LinearLayout>

       </androidx.cardview.widget.CardView>


   </LinearLayout>



    <LinearLayout
        android:orientation="vertical"
        android:padding="8dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <ss.com.bannerslider.Slider
            android:id="@+id/banner_slider"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="2dp">
            <TextView
                android:layout_width="75dp"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center_vertical"
                android:text="Look Book"
                android:fontFamily="@font/bangers"
                android:textColor="@color/colorTextPrimary"
                android:textSize="18sp"/>
            
        </RelativeLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_look_book"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal"/>

    </LinearLayout>


</LinearLayout>